<%= render "shared/admin_header" %>

<%= link_to "New Merchant", "/admin/merchants/new" %>

<div id="top_merchants">
  <h3>Top Merchants</h3>
  <ol>
  <% @merchants.top_5_merchants.each do |merchant| %>
    <li><%= link_to "#{merchant.name}", "/merchants/#{merchant.id}/dashboard" %> - $<%= merchant.revenue_dollars(merchant.revenue) %></li>
    <p>Top selling date was <%= merchant.top_selling_date.strftime("%m/%d/%Y") %></p>
  <% end %>
  </ol>
</div>

<div id="enabled_merchants">
  <h3> Enabled Merchants  </h3>

  <% @merchants.enabled_merchants.each do |merchant|  %>
    <div id="merchant-<%= merchant.id %>">
      <p><%= link_to merchant.name, "/admin/merchants/#{merchant.id}" %>
      <%= button_to "Disable", admin_merchant_path(merchant), method: :patch, params: {merchant_id: merchant.id, disabled: true} %></p>
    </div>
  <% end %>

</div>

<div id="disabled_merchants">
  <h3> Disabled Merchants </h3>

    <% @merchants.disabled_merchants.each do |merchant|  %>
    <div id="merchant-<%= merchant.id %>">
      <p><%= link_to merchant.name, "/admin/merchants/#{merchant.id}" %>
      <%= button_to "Enable", admin_merchant_path(merchant), method: :patch, params: {merchant_id: merchant.id, enabled: true} %></p>
    </div>
  <% end %>

</div>





